#include"bits/stdc++.h"
using namespace std;

void move(int arr[],int n)
{
    int i=0,j=n-1;
    while(i<j)
    {
        if(arr[i]<0)
            i++;
        if(arr[j]>0)
            j--;
        if(arr[i]>0 and arr[j]<0 and i<j)
        {
            int t=arr[i];
            arr[i]=arr[j];
            arr[j]=t;
        }
    }
}

int main()
{
    int n;
    cout<<"enter the array size"<<endl;
    cin>>n;
    cout<<"enter the array elements"<<endl;
    int arr[n];
    for(int i=0;i<n;i++)
        cin>>arr[i];
    move(arr,n);
    for(int i=0;i<n;i++)
        cout<<arr[i]<<" ";
    return 0;
}
